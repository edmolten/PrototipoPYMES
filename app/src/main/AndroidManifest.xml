<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lalo.cl.prototipopymes">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlertasProductosActivity"
            android:label="@string/title_activity_productos_alertas"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lalo.cl.prototipopymes.MainActivity" />
        </activity>
        <activity
            android:name=".AlertaClientesActivity"
            android:label="@string/title_activity_alerta_clientes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lalo.cl.prototipopymes.MainActivity" />
        </activity>
        <activity
            android:name=".CompetenciasActivity"
            android:label="Competencia">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lalo.cl.prototipopymes.MainActivity" />
        </activity>
        <activity android:name=".DetalleCompetenciaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lalo.cl.prototipopymes.CompetenciasActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".AlertasActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lalo.cl.prototipopymes.MainActivity" />
        </activity>
        <activity
            android:name=".InternosActivity"
            android:label="Indicadores Internos">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lalo.cl.prototipopymes.MainActivity" />
        </activity>
        <activity
            android:name=".ExternosActivity"
            android:label="@string/title_activity_externos"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lalo.cl.prototipopymes.MainActivity" />
        </activity>
    </application>

</manifest>